unit Model.Entidade.Prazo.Pagamento.Interfaces;

interface

type
  iPrazoPagameno = interface
    ['{F74ACD49-CF17-4B54-83B0-23DD08FC08B5}']
    function Id                 (Value : Integer)  : iPrazoPagameno; overload;
    function Id                                    : Integer;        overload;
    function CodigoPrazo        (Value : String)   : iPrazoPagameno; overload;
    function NomePrazo          (Value : String)   : iPrazoPagameno; overload;
    function NomePrazo                             : String;         overload;
    function QuantidadePagamento(Value : Integer)  : iPrazoPagameno; overload;
    function QuantidadePagamento                   : Integer;        overload;
    function TotaldeDias        (Value : Currency) : iPrazoPagameno; overload;
    function TotaldeDias                           : Currency;       overload;
    function Status             (Value : Integer)  : iPrazoPagameno; overload;
    function Status                                : Integer;        overload;
  end;
implementation

end.
